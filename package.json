{
  "name": "@plex-inc/bricks",
  "version": "1.8.0",
  "description": "Plex Design System",
  "main": "./lib/components/index.js",
  "module": "./lib/components/index.js",
  "types": "./lib/components/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plex-Inc/bricks.git"
  },
  "exports": {
    ".": {
      "import": "./lib/index.js"
    },
    "./components": {
      "import": "./lib/components/index.js"
    },
    "./hooks": {
      "import": "./lib/hooks/index.js"
    },
    "./utils": {
      "import": "./lib/utils/index.js"
    },
    "./style.css": "./lib/style.css"
  },
  "typesVersions": {
    "*": {
      "components": [
        "./lib/components/index.d.ts"
      ],
      "hooks": [
        "./lib/hooks/index.d.ts"
      ],
      "utils": [
        "./lib/utils/index.d.ts"
      ]
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && vite build",
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepublishOnly": "npm run build",
    "postbuild": "cp package.json README.md lib",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1.6.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@storybook/addon-essentials": "8.2.8",
    "@storybook/addon-interactions": "8.2.4",
    "@storybook/addon-links": "8.2.6",
    "@storybook/addon-onboarding": "8.1.11",
    "@storybook/blocks": "8.2.8",
    "@storybook/react": "8.1.11",
    "@storybook/react-vite": "8.1.11",
    "@storybook/test": "8.2.8",
    "@types/react": "^18.2.38",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@yelo/rollup-node-external": "^1.0.1",
    "eslint": "^9.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "semantic-release": "24.0.0",
    "storybook": "8.2.8",
    "typescript": "^5.3.2",
    "typescript-plugin-css-modules": "^5.0.2",
    "vite": "^5.0.2",
    "vite-plugin-dts": "^3.6.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@tippyjs/react": "4.2.6",
    "classnames": "^2.3.2"
  },
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
